# Application Settings
APP_NAME=intent-service
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true

# Database Settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=intent_service
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_POOL_SIZE=50
CACHE_TTL=3600

# Model Settings
MODEL_TYPE=bge-m3  # bge-m3, bge-large-zh, or vllm
MODEL_PATH=/models/bge-m3
MODEL_DEVICE=cuda  # cuda, cpu, mps
MODEL_BATCH_SIZE=32
MODEL_MAX_LENGTH=512

# vLLM Settings (if using vLLM)
VLLM_HOST=localhost
VLLM_PORT=8001
VLLM_MODEL_NAME=/models/bge-m3

# LLM Settings (for fallback classification)
LLM_API_KEY=
LLM_BASE_URL=
LLM_MODEL=
ENABLE_LLM_FALLBACK=false

# Intent Recognition Settings
DEFAULT_CONFIDENCE_THRESHOLD=0.7
MIN_KEYWORD_MATCH=1
ENABLE_REGEX_MATCHING=true
ENABLE_SEMANTIC_MATCHING=true
ENABLE_KEYWORD_MATCHING=true
SEMANTIC_SIMILARITY_THRESHOLD=0.75

# Performance Settings
ENABLE_CACHE=true
CACHE_PREFIX=intent:
REQUEST_TIMEOUT=30
MAX_BATCH_SIZE=100

# Security
API_KEY_HEADER=X-API-Key
ADMIN_API_KEY=
API_SECRET=your-api-secret-here

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
